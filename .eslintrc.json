{
  "extends": [
    "next/core-web-vitals",
    "plugin:@typescript-eslint/recommended"
  ],
  "rules": {
    "@typescript-eslint/no-unused-vars": "off", // Disable unused variables rule
    "@typescript-eslint/no-explicit-any": "off", // Allow explicit use of 'any'
    "@next/next/no-html-link-for-pages": "off", // Disable restrictions on using plain HTML links
    "@typescript-eslint/no-unused-expressions": "off" // Allow unused expressions
  }
}